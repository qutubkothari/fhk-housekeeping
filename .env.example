# ============================================
# FHK HOUSEKEEPING SYSTEM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env in each app folder and fill in actual values

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# OPENAI CONFIGURATION (REQUIRED)
# ============================================
# Get from: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# DEPLOYMENT CONFIGURATION (PRODUCTION ONLY)
# ============================================

# Domain name for your deployment
DOMAIN=your-hotel-domain.com

# Email for SSL certificate (Let's Encrypt)
SSL_EMAIL=admin@your-hotel-domain.com

# EC2 Instance IP
EC2_IP=your-ec2-ip-address

# SSH Key Path (for deployment)
SSH_KEY_PATH=/path/to/your-key.pem

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Application URLs
VITE_ADMIN_URL=https://your-hotel-domain.com
VITE_STAFF_URL=https://your-hotel-domain.com/staff

# OpenAI Model (default: gpt-4)
OPENAI_MODEL=gpt-4

# OpenAI Max Tokens (default: 500)
OPENAI_MAX_TOKENS=500

# Environment (development/production)
NODE_ENV=production

# ============================================
# NOTES
# ============================================
# 1. Never commit .env files to git
# 2. Keep your keys secure
# 3. Rotate API keys regularly
# 4. Use different keys for dev/prod
# 5. Set Supabase secrets via dashboard for edge functions
